# Base class
class Animal:
    def move(self):
        print("This animal moves in its own way.")

# Subclasses with different move() implementations
class Snake(Animal):
    def move(self):
        print("ğŸ Slithering on the ground...")

class Bird(Animal):
    def move(self):
        print("ğŸ•Šï¸ Flying through the sky...")

class Kangaroo(Animal):
    def move(self):
        print("ğŸ¦˜ Hopping across the land...")

class Fish(Animal):
    def move(self):
        print("ğŸŸ Swimming in the water...")

# Testing polymorphism
def main():
    animals = [Snake(), Bird(), Kangaroo(), Fish()]

    print("How do these animals move?\n")
    for animal in animals:
        animal.move()

if __name__ == "__main__":
    main()
